{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.build.tsbuildinfo",
  },
  "include": [
    // tsconfig.app.json
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/vite-env.d.ts",
    // tsconfig.node.json
    "vite.config.ts"
  ],
  "exclude": [
    // configs
    "vitest.config.ts",
    // setup files
    "vitest.setup.ts",
    // test files
    "e2e",
    "test",
    "**/*.test.ts",
    "**/*.test.tsx",
  ]
}