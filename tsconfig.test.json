{
  // same as tsconfig.app.json
  "compilerOptions": {
    "jsx": "react-jsx",
    /* Linting */
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "e2e",
    "test",
    "vitest.setup.ts"
  ]
}